<div class="px-2 py-4">
  <h3 class="px-2 text-sm font-semibold uppercase bold text-gray-500 mb-4">History</h3>
  <ul role="list" class="px-2 space-y-1 max-h-64 overflow-auto">
    <% @resource.record.avo_activities.last_30_days.latest.take(10).each do |activity| %>
      <%= render Avo::ActivityComponent.new activity: %>
    <% end %>
  </ul>
</div>
